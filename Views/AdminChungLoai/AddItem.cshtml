@model DienMayws.Models.ChungLoai
@{
    ViewBag.Title = "AddItem";
}

<h2 class="page-header">Chủng loại <small>Thêm mới</small></h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group ">
            <label class="control-label col-sm-2" for="txtTen">Tên chủng loại:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTen" name="Ten" placeholder="Nhập tên chủng loại" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="txtBiDanh">Bí danh:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtBiDanh" name="BiDanh" placeholder="Nhập bí danh" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Ghi thông tin</button>
            </div>
        </div>
    </div>
}
