@model IEnumerable<DienMayws.Models.ChungLoai>
@{
    ViewBag.Title = "Chủng loại";
}

<h2 class="page-header text-info">Chủng loại <small>Xem danh sách</small></h2>
<div>@Html.ActionLink("Thêm mới","AddItem") <span class="glyphicon glyphicon-plus-sign"></span></div>
<div class="table-responsive">
    <table class="table table-bordered table-hover" style="min-width:500px">
        <tr class="alert-info">
            <th>ID</th>
            <th>@Html.DisplayNameFor(model=>model.Ten)</th>
            <th>Bí danh</th>
            <th>Chức năng</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ChungLoaiID</td>
                <td>@item.Ten</td>
                <td>@item.BiDanh</td>
                <td>
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ChungLoaiID }, htmlAttributes: new { onclick = "return confirm('Bạn có thật sự muốn xóa?')" }) |
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ChungLoaiID })
                   
                </td>
            </tr>
        }
    </table>

</div>
